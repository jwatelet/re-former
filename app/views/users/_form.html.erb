
<ul>
  <% @user.errors.full_messages.each do |message| %>
   <li>
    <%= message %>
   </li>
  <% end %>
</ul>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "example@example.com" %> 
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %> 
  </div>

  <%=  f.submit %>
<% end %>